<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.quanzhen.myDemo.dao.ElectiveDao">
	<!-- 映射结果集 -->
	<resultMap type="Elective" id="elective-result">
		<id column="id" property="id" />
		<result column="studentId" property="sid" />
		<result column="courseId" property="cid" />
		<result column="teacherId" property="tid" />
		<result column="score" property="score" />
	</resultMap>

	<!-- 查询所有班级数据 -->
	<select id="findAll" resultMap="elective-result">
		select * from elective order by
		id
		desc
	</select>

	<!-- 插入数据 -->
	<insert id="save"
		parameterType="com.quanzhen.myDemo.pojo.Elective">
		insert into
		Elective(sid,cid,tid,score)value(#{sid},#{cid},#{tid},#{score})
	</insert>

	<!-- 修改数据 -->
	<update id="update"
		parameterType="com.quanzhen.myDemo.pojo.Elective">
		update elective set
		sid=#{sid},cid=#{cid},tid=#{tid},score=#{score}
		where id=#{id}
	</update>

	<!-- 删除数据 -->
	<delete id="delete" parameterType="long">
		delete from elective where
		id=#{id}
	</delete>

</mapper>