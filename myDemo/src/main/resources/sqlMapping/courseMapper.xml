<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.quanzhen.myDemo.dao.CourseDao">
	<!-- 映射结果集 -->
	<resultMap type="Course" id="course-result">
		<id column="id" property="id" />
		<result column="name" property="name" />
	</resultMap>

	<!-- 查询所有课程数据 -->
	<select id="findAll" resultMap="course-result">
		select * from course order by id
		desc
	</select>

	<!-- 插入数据 -->
	<insert id="save"
		parameterType="com.quanzhen.myDemo.pojo.Course">
		insert into
		course(name)value(#{name})
	</insert>

	<!-- 修改数据 -->
	<update id="update"
		parameterType="com.quanzhen.myDemo.pojo.Course">
		update course set name=#{name}
		where id=#{id}
	</update>

	<!-- 删除数据 -->
	<delete id="delete" parameterType="long">
		delete from course where
		id=#{id}
	</delete>

</mapper>