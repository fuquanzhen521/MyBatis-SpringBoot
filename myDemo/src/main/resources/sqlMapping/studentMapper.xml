<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.quanzhen.myDemo.dao.StudentDao">
	<!-- 映射结果集 -->
	<resultMap type="Student" id="student-result">
		<id column="id" property="id" />
		<result column="name" property="name" />
		<result column="birthday" property="birthday" />
		<result column="sex" property="sex" />
		<result column="schoolId" property="sch_id" />
		<result column="gradeId" property="gra_id" />
		<result column="classId" property="cla_id" />
	</resultMap>

	<!-- 查询所有学生数据 -->
	<select id="findAll" resultMap="student-result">
		select * from student order by id
		desc
	</select>

	<!-- 插入数据 -->
	<insert id="save"
		parameterType="com.quanzhen.myDemo.pojo.Student">
		insert into
		student(name,birthday,sex,sch_id,gra_id,cla_id)value(#{name},#{birthday},#{sex},#{sch_id},#{gra_id},#{cla_id})
	</insert>

	<!-- 修改数据 -->
	<update id="update"
		parameterType="com.quanzhen.myDemo.pojo.Student">
		update student set
		name=#{name},birthday=#{birthday}.sex=#{sex},sch_id=#{sch_id},gra_id=#{gra_id},cla_id=#{cla_id}
		where id=#{id}
	</update>

	<!-- 删除数据 -->
	<delete id="delete" parameterType="long">
		delete from student where
		id=#{id}
	</delete>

</mapper>